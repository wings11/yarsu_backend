# =====================================================
# Environment Variables Template
# =====================================================
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=3000

# =====================================================
# Oracle Database Configuration
# =====================================================
# For Oracle Cloud Free Tier:
#   Connection string format: host:port/service_name
#   Example: adb.ap-tokyo-1.oraclecloud.com:1522/abc123_high
#
# For self-hosted Oracle:
#   Example: your-server.com:1521/ORCL

ORACLE_USER=your_oracle_username
ORACLE_PASSWORD=your_oracle_password
ORACLE_CONNECTION_STRING=your_oracle_host:1521/your_service_name

# =====================================================
# Supabase Configuration (Auth & Storage Only)
# =====================================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# =====================================================
# Firebase Configuration (Push Notifications)
# =====================================================
# Option 1: Base64 encoded service account JSON (recommended for Docker)
FIREBASE_SERVICE_ACCOUNT_B64=

# Option 2: Path to service account file
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 3: Raw JSON string
# FIREBASE_SERVICE_ACCOUNT_JSON=

# =====================================================
# Redis Configuration (Optional)
# =====================================================
REDIS_URL=redis://localhost:6379
